<div class="card mt-3 mb-3">
    <div class="card-header text-center bg-secondary text-white">
        <h3> Mi carrito de compra </br> GloboFiestaCake's</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="listado-compras">
                    {{#each carritoPersonal}}
                    <tr>
                        <th scope="row">{{numero}}</th>
                        <td>{{name}}</td>
                        <td>L {{unitPrice}}</td>
                        <td>{{amount}}</td>
                        <td>L {{subTotal}}</td>
                        <td data-compra={{id}}>
                            <button class="btn btn-fab btn-round btn-danger">
                                <i class="fas fa-times"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
        <div class="form-group">
            <label class="h4" for="address">Dirección:</label>
            <textarea name="address" maxlength="250" rows="4" id="address" class="form-control"
                placeholder="Ejemplo: Barrio El Carmen, Carretera al Batallón, cuadra y media de la gasolinera Uno, casa color verde"></textarea>
        </div>
        <h3 class="text-dark text-right m-2"><strong>Total: L {{total}}</strong></h3>
        <a href="#" class="btn btn-success btn-block">Terminar compra</a>
    </div>
</div>