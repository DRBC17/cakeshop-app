{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
<div class="input-group m-3"  style="width: 70%;">
  <input type="text" class="form-control" placeholder="" aria-label="Recipient's username" aria-describedby="button-addon2">
  <div class="input-group-append">
    <button class="btn btn-secondary" type="button" id="button-addon2">Buscar</button>
  </div>
</div>

{{#if products}}
<div class="mt-3 card-columns animate__animated animate__fadeInDown">
    {{#each products}}
    <div class="card border border-dark">
        <img src="{{urlImage}}" class="card-img-top  shadow" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
             <h3 class="text-dark text-center m-2 mt-2"><strong>L {{unitPrice}}</strong></h3>
            <a href="#" class="btn btn-primary btn-block">Comprar</a>
        </div>
    </div>
    {{/each}}
</div>
{{else}}

</div>
