{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}


<div class="form-inline">
    <form action="/tienda/buscar_producto" method="POST" class="form-search mt-3 p-0">
        <input class="form-control mt-1" type="search" name="search" value="{{search}}">
        <button class="btn btn-success mt-1 btn-buscar" type="submit">Buscar</button>
        {{#if search}}
        <a href="/tienda" class="form-control mt-1 ml-1 btn btn-warning" title="Restablecer pagina"><i
                class="fas fa-redo"></i></a>
        {{/if}}
    </form>
    {{#if carrito}}
    <a href="/tienda/carrito" class="btn btn-secondary btn-lg m-2 mt-3 ml-auto ml-1">Terminar pedido<i
            class="ml-1 fas fa-cart-plus mr-1"></i></a>
    {{/if}}
</div>

{{#if products}}
<div class="mt-3 card-columns animate__animated animate__fadeInDown">
    {{#each products}}
    <div class="card border border-dark text-center">
        <img src="{{urlImage}}" class="card-img-top shadow imageSizeStore" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title text-dark"><strong>{{name}}</strong></h5>
            <p class="card-text text-parcial">{{description}}</p>
            <h3 class="text-dark text-center m-2 mt-2"><strong>L {{unitPrice}}</strong></h3>
            <a href="/tienda/producto/{{url}}" class="btn btn-primary btn-block">Realizar pedido</a>
        </div>
    </div>
    {{/each}}
</div>
{{else}}

</div>
<div class="alert alert-info mt-2" role="alert">
    <h5>AÃºn no tenemos productos disponibles en la tienda.</h5>
</div>
{{/if}}