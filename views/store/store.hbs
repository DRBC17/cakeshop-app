{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
    <form class="form-inline my-2 my-lg-0 pt-3">
      <input class="form-control mr-sm-2 barra" type="search" placeholder="" aria-label="Search">
      <button class="btn btn-success my-2 my-sm-0 btn-buscar" type="submit">Buscar</button>
    </form>

{{#if products}}
<div class="mt-3 card-columns animate__animated animate__fadeInDown">
    {{#each products}}
    <div class="card border border-dark">
        <img src="{{urlImage}}" class="card-img-top shadow" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
             <h3 class="text-dark text-center m-2 mt-2"><strong>L {{unitPrice}}</strong></h3>
            <a href="#" class="btn btn-primary btn-block">Comprar</a>
        </div>
    </div>
    {{/each}}
</div>
{{else}}

</div>
