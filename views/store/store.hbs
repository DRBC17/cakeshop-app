{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
<form action="/tienda/buscar_producto" method="POST" class="form-search form-inline mt-3">
    <input class="form-control m-1" type="search" name="search" value="{{search}}">
    <button class="btn btn-success m-1 btn-buscar" type="submit">Buscar</button>
</form>

{{#if products}}
<div class="mt-3 card-columns animate__animated animate__fadeInDown">
    {{#each products}}
    <div class="card border border-dark text-center">
        <img src="{{urlImage}}" class="card-img-top shadow imageSizeStore" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title text-dark"><strong>{{name}}</strong></h5>
            <p class="card-text">{{description}}</p>
            <h3 class="text-dark text-center m-2 mt-2"><strong>L {{unitPrice}}</strong></h3>
            <a href="#" class="btn btn-primary btn-block">Comprar</a>
        </div>
    </div>
    {{/each}}
</div>
{{else}}

</div>
<div class="alert alert-info mt-2" role="alert">
