{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
<div class="card mt-3 mb-3">
    <div class="card-header text-center bg-secondary text-white">
        <h3>Pedidos</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Numero de tel√©fono</th>
                        <th scope="col">Domicilio</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Fecha del pedido</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="listado-pedidos">
                    {{#each pedidos}}
                    <tr>
                        <th scope="row">{{numero}}</th>
                        <td>{{phone}}</td>
                        <td>{{#if atHome}}
                            Si
                            {{else}}
                            No
                            {{/if}}</td>
                        <td>{{#if status}}
                            Entregado
                            {{else}}
                            Pendiente
                            {{/if}}</td>
                        <td>{{updatedAt}}</td>
                        <td>
                            <a href="/cuenta/mi_pedido/{{id}}" class="btn btn-primary btn-sm btn-block">Ver pedido</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>