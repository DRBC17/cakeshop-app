{{!-- Formulario de actualizar categoría --}}

{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
<form action="/actualizar_categoria/{{categories.id}}" method="post">
    <div class="container p-4">
        <div class="row">
            <div class="ml-auto mr-auto form-small">
                <div class="card animate__animated animate__pulse">
                    <h5 class="card-header bg-dark text-white text-center">Actualizar categoría</h5>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="name" id="name" placeholder="Nombre" class="form-control"
                                value="{{categories.name}}" />
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="description" placeholder="Descripción"
                                class="form-control">{{categories.description}}</textarea>
                        </div>
                        <p class="card-text">Creado: {{created}}</p>
                        <p class="card-text">Ultima modificación: {{updated}}</p>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Actualizar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
