<form action="/agregar_categoria" method="post">
    <div class="container p-4">
        <div class="row">
            <div class="ml-auto mr-auto form-small">
                <div class="card animate__animated animate__pulse">
                    <h5 class="card-header bg-dark text-white text-center">Agregar categoría</h5>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="name" id="name" placeholder="Nombre" class="form-control" />
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="4" id="description" placeholder="Descripción" class="form-control"></textarea>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Agregar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>