{{!-- Formulario de actualizar categoría --}}

{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
<form action="/actualizar_producto/{{products.id}}" method="post" enctype="multipart/form-data">
    <div class="container p-4">
        <div class="row">
            <div class="ml-auto mr-auto form-small">
                <div class="card animate__animated animate__pulse">
                    <h5 class="card-header bg-dark text-white text-center">Actualizar producto</h5>
                    <img src="{{products.urlImage}}" class="card-img-top" alt="{{products.name}}">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="name" id="name" placeholder="Nombre" class="form-control"
                                value="{{products.name}}" />
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="description" placeholder="Descripción"
                                class="form-control">{{products.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" name="unitPrice" step="any" placeholder="Precio por unidad"
                                class="form-control" value="{{products.unitPrice}}" />
                        </div>
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile02" name="image">
                                <label class="custom-file-label" for="inputGroupFile02"
                                    aria-describedby="inputGroupFileAddon02" data-browse="Buscar">Seleccionar
                                    Archivo</label>
                            </div>
                        </div>
                        <h5 class="text-dark">Categoría: {{category}}</h5>
                        <p class="card-text">Creado: {{created}}</p>
                        <p class="card-text">Ultima modificación: {{updated}}</p>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Actualizar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>