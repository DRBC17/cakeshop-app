{{!-- Formulario de actualizar categoría --}}

{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}
<form action="/actualizar_producto/{{products.id}}" method="post" enctype="multipart/form-data">
    <div class="container p-4">
        <div class="card mb-3  animate__animated animate__fadeInDown">
            <h5 class="card-header bg-dark text-white text-center">Actualizar categoría</h5>
            <div class="row no-gutters">
                <div class="col-md-4 p-1">
                    <img src="{{products.urlImage}}" class="card-img imageSize border border-dark rounded"
                        alt="{{products.name}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Nombre:</label>
                            <input type="text" name="name" id="name" placeholder="Nombre" class="form-control"
                                value="{{products.name}}" />
                        </div>
                        <div class="form-group">
                            <label for="description">Descripción:</label>
                            <textarea name="description" maxlength="250" rows="4" id="description"
                                placeholder="Descripción" class="form-control">{{products.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="description">Precio:</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">L</span>
                                </div>
                                <input type="text" name="unitPrice" id="unitPrice" class="form-control" placeholder="0.00" aria-label="Precio"
                                    aria-describedby="basic-addon1" value="{{products.unitPrice}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile02" name="image">
                                <label class="custom-file-label" for="inputGroupFile02"
                                    aria-describedby="inputGroupFileAddon02" data-browse="Buscar">Seleccionar
                                    Archivo</label>
                            </div>
                        </div>
                        <h5 class="text-dark">Categoría: {{category}}</h5>
                        <div>
                            <p class="card-text mb-0"><small class="text-muted">Creado: {{created}}</small></p>
                            <p class="card-text"><small class="text-muted">Ultima modificación: {{updated}}</small>
                            </p>
                        </div>
                        <div class="form-group p-2">
                            <button type="submit" class="btn btn-success btn-block">
                                Actualizar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>