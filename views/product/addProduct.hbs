{{!-- Formulario de inicio de sesion --}}

{{>ourMessages}}

<form action="/agregar_producto" method="POST" enctype="multipart/form-data">
  <div class="container p-4">
    <div class="row">
      <div class="ml-auto mr-auto form-small">
        <div class="card animate__animated animate__pulse">
          <h5 class="card-header bg-dark text-white text-center">Agregar producto</h5>
          <div class="card-body">

            <div class="form-group pt-2">
              <label for="description">Nombre:</label>
              <input type="text" name="name" maxlength="100" placeholder="Pastel de fresa" class="form-control" required
                value="{{producto.name}}" />
            </div>
            <div class="form-group">
              <label for="description">Descripción:</label>
              <textarea name="description" maxlength="250" rows="4" id="description" class="form-control"
                required>{{producto.description}}</textarea>
            </div>
            <div class="form-group">
              <select class="custom-select" name="categoryId" required>
                <option value="0" selected disabled hidden>Categorías</option>
                {{#each categories}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label for="description">Precio:</label>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">L</span>
                </div>
                <input type="text" autocomplete="off" name="unitPrice" id="unitPrice" class="form-control"
                  placeholder="0.00" aria-label="Precio" aria-describedby="basic-addon1" value="{{producto.unitPrice}}"
                  required>
              </div>
            </div>

            <div class="form-group">
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile02" name="image"
                  accept="image/*" required>
                <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02"
                  data-browse="Buscar">Seleccionar
                  Archivo</label>
              </div>
            </div>


            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block">
                Agregar
              </button>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</form>