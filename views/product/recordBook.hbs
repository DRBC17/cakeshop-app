{{!-- Mensajes de error --}}
{{>ourMessages}}

<div class="d-flex flex-row-reverse">
    <a href="/agregar_producto" class="btn btn-success btn-lg m-2">Agregar producto</a>
</div>
{{!-- card-columns --}}
<div class="row row-cols-1 row-cols-md-3">
  {{#if products}}
  {{#each products}}
  <div class="col mb-4 animate__animated animate__fadeInDown">
    <div class="card mb-2 animate__animated animate__pulse">
      
      <h3 class="card-header bg-dark text-white">{{name}}</h3>
<img src="{{urlImage}}" class="card-img-top" alt="{{name}}">
      <div class="card-body">
        <h5 class="card-title">{{description}}</h5>
        <h4 class="text-dark">L {{unitPrice}}</h4>
        <p class="card-text">Creado: {{createdAt}}</p>
        <p class="card-text">Ultima modificación: {{updatedAt}}</p>
        <a href="/actualizar_producto/{{url}}" class="btn btn-primary btn-lg">Actualizar</a>
        <button name="eliminar-producto" type="button" class="btn btn-danger btn-lg">Eliminar</button>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
</div>
<div class="alert alert-info" role="alert">
  <h5>Aún no tienes ningúna producto. ¡Anímate a crear uno!</h5>
</div>
{{/if}}