<form action="/cuenta:id" method="get">
    <div class="container p-4">
        <div class="form-account offset-md-3">
            <div class="card">
                <h5 class="card-header bg-dark text-white text-center">Mi cuenta en GloboFiestaCake's</h5>
                <div class="card-body">
                    <div class="form-group">
                        <h5>Nombre:</h5>
                        <input type="text" name="firstName" placeholder="Nombre" required class="form-control"
                            value="{{usuario.firstName}}" disabled />
                    </div>
                    <div class="form-group">
                        <h5>Apellido:</h5>
                        <input type="text" name="lastName" placeholder="Apellido" required class="form-control"
                            value="{{usuario.lastName}}" disabled />
                    </div>
                    <div class="form-group">
                        <h5>Correo electr칩nico:</h5>
                        <input type="email" name="email" placeholder="Correo electr칩nico" required class="form-control"
                            value="{{usuario.email}}" disabled />

                    </div>
                    <div class="form-group">
                        <h5>Numero de telefono:</h5>
                        <input type="number" name="phone" placeholder="Numero de telefono" required class="form-control"
                            value="{{usuario.phone}}" disabled />

                    </div>
                    <div class="form-group">
                        <h5>Contrase침a:</h5>
                        <input type="password" name="password" placeholder="**************" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <h5>Nueva contrase침a:</h5>
                        <input type="password" name="passwordConfirm" placeholder="**************" required
                            class="form-control" />
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">
                            Actualizar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
