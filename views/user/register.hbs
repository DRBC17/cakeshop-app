{{!-- Formulario de registro --}}

{{!-- Mostrar los mensajes en caso de existir --}}
{{>messages}}
<form action="/registrate" method="post">
    <div class="container p-4">
        <div class="row">
            <div class="ml-auto mr-auto form-small">
                <div class="card animate__animated animate__pulse">
                    <h5 class="card-header bg-dark text-white text-center">Regístrate en GloboFiestaCake's</h5>
                    <div class="card-body">
                        <div class="form-group pt-2">
                            <label>Nombre:</label>
                            <input type="text" name="firstName" required class="form-control"
                                value="{{usuario.firstName}}" />
                        </div>
                        <div class="form-group">
                            <label>Apellido:</label>
                            <input type="text" name="lastName" required class="form-control"
                                value="{{usuario.lastName}}" />
                        </div>
                        <div class="form-group">
                            <label>Correo electrónico:</label>
                            <input type="email" name="email" placeholder="ejemplo@correo.com" required
                                class="form-control" value="{{usuario.email}}" />
                        </div>
                        <div class="form-group">
                            <label>Contraseña:</label>
                            <input type="password" name="password" maxlength="20" required class="form-control" />
                            <small id="passwordHelpInline" class="text-muted">
                                Debe tener:<br />- Entre 4 y 20 caracteres de longitud<br />- Tener al menos una letra
                                mayúscula
                            </small>
                        </div>
                        <div class="form-group">
                            <label>Confirmar contraseña:</label>
                            <input type="password" name="passwordConfirm" maxlength="20" required
                                class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Numero de teléfono:</label>
                            <input type="tel" name="phone" autocomplete="off" required class="form-control"
                                value="{{usuario.phone}}" />
                        </div>
                        <div class="form-check m-1">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" value="" checked>
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                                Acepto los <a href="#something">términos y condiciones</a>.
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Registrarse
                            </button>
                        </div>
                        <h6 class="text-center p-2">¿Ya registrado? <a href="/iniciar_sesion">Inicia sesión</a></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>